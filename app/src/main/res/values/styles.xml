<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="button">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">25dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="button2">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">20dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="bg1">
        <item name="android:background">@color/bg1</item>
    </style>
    <style name="bg2">
        <item name="android:background">@color/bg2</item>
    </style>

    <style name="popup">
        <item name="android:background">@color/bg2</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">25dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="popupclose">
        <item name="android:background">@color/bg1</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">25dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="popbg">
        <item name="android:background">@color/bg2</item>
        <item name="android:radius">30dp</item>
    </style>
    <style name="list">
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="listheading">

        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="headings">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">casual</item>
    </style>
    <style name="back">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    <style name="info">

        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
